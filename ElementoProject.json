      "id": "serverapp_1",
      "name": "Puzzles Server",
      "properties": {},
      "elements": [
        {
          "id": "firestoredatastore_2",
          "name": "Server Data Store",
          "properties": {
            "collections": "Teams\nUsers"
          },
          "kind": "FirestoreDataStore"
        },
        {
          "id": "collection_3",
          "name": "Teams",
          "properties": {
            "dataStore": {
              "expr": "ServerDataStore"
            },
            "collectionName": "Teams"
          },
          "kind": "Collection"
        },
        {
          "id": "collection_4",
          "name": "Users",
          "properties": {
            "dataStore": {
              "expr": "ServerDataStore"
            },
            "collectionName": "Users"
          },
          "kind": "Collection"
        },
        {
          "id": "function_5",
          "name": "Update User",
          "properties": {
            "input1": "changes",
            "action": true,
            "calculation": {
              "expr": "let user = await GetUser()\nIf(user, await Update(Users, user.id, changes), await Add(Users, Record(changes, 'id', user.id)))"
            }
          },
          "kind": "Function"
        },
        {
          "id": "function_6",
          "name": "Get User",
          "properties": {
            "input1": "changes",
            "action": false,
            "calculation": {
              "expr": "let userId = CurrentUser().uid\nlet userResult = await Query(Users, {id: userId})\nuserResult[0]"
            }
          },
          "kind": "Function"
        },
        {
          "id": "function_4",
          "name": "New Team",
          "properties": {
            "input1": "teamData",
